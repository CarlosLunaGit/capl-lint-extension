{
  "name": "capl-lint",
  "displayName": "capl-lint",
  "publisher": "AESSTechnologies",
  "repository": {
    "type": "github",
    "url": "https://github.com/CarlosLunaGit/capl-lint-extension"
  },
  "description": "Elevate your CAPL coding experience with the CAPL Linter VS Code Extension! Designed specifically for CAPL (CAN Application Programming Language) developers, this powerful tool integrates seamlessly into your VS Code environment, offering real-time linting, code analysis, and auto-correction features that boost productivity and ensure code quality.",
  "icon": "images/CAPLLinter128.png",
  "version": "0.0.11",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "capl-linter.lint",
        "title": "Lint CAPL Code"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "qs": "^6.12.1"
  }
}
